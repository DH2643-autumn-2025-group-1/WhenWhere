echo "🔍 Running ESLint..."
npm run lint
lint_exit_code=$?

echo "✨ Formatting with Prettier..."
npm run format
format_exit_code=$?

if [ $lint_exit_code -ne 0 ] || [ $format_exit_code -ne 0 ]; then
  echo "❌ Pre-commit checks failed. Fix issues before committing."
  exit 1
fi


echo "✅ Pre-commit checks passed!"