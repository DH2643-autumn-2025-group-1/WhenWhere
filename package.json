{
  "name": "whenwhere",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\"",
    "build": "concurrently \"npm run build --prefix frontend\" \"npm run build --prefix backend\"",
    "install:all": "concurrently \"npm install\" \"npm install --prefix frontend\" \"npm install --prefix backend\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write 'frontend/**/*.{ts,tsx,js,jsx,json}' 'backend/**/*.{ts,js,json}'",
    "lint": "eslint 'frontend/**/*.{ts,tsx,js,jsx}' 'backend/**/*.{ts,js}'",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joel90688/WhenWhere.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/joel90688/WhenWhere/issues"
  },
  "homepage": "https://github.com/joel90688/WhenWhere#readme",
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "concurrently": "^7.5.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "typescript-eslint": "^8.44.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx,json,css,scss}": [
      "eslint --fix",
      "prettier --write"
    ],
    "backend/**/*.{ts,js,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
